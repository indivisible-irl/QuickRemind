<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity"
    >
    
    <!--  Instructions  -->
    <TextView android:id="@+id/alarmSet_tvDescription"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:paddingTop="12dp"
        android:gravity="center_horizontal"
        android:text="Enter the number of seconds from now to trigger the alarm:"
        />
    
    <!--  Display the current seconds from now to trigger alarm  -->
    <TextView android:id="@+id/alarmSet_tvSecondsFromNow"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:padding="15dp"
        android:gravity="center_horizontal"
        android:textSize="45sp"
        android:text="0"
        />
    
    <!--  +/- Buttons  -->
    <LinearLayout 
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:weightSum="2"
        >
        <Button android:id="@+id/alarmSet_bSecondsMinusOne"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textStyle="bold"
            android:text="-"
            />
        <Button android:id="@+id/alarmSet_bSecondsPlusOne"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textStyle="bold"
            android:text="+"
            />
        
    </LinearLayout>
    
    <!--  EditTexts for Alarm details  -->
    <LinearLayout 
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
        
        <EditText android:id="@+id/alarmSet_etAlarmTitle"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:hint="Title"
            />
        <EditText android:id="@+id/alarmSet_etAlarmDescription"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:inputType="textMultiLine"
            android:lines="3"
            android:minLines="2"
            android:maxLines="3"
            android:hint="Alarm Description"
            />
        
    </LinearLayout>
    
    <!--  Button to activate alarm  -->
    <Button android:id="@+id/alarmSet_bSetAlarm"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:text="Set Alarm"
        />

</LinearLayout>